@model BibliotecaAsp.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Book</h4>
<hr />

<form asp-action="Create" method="post">
    <!-- @Html.AntiForgeryToken() si vas a reactivar antiforgery -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Summary" class="control-label"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PublicationDate" class="control-label"></label>
        <input asp-for="PublicationDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label"></label>
        <select asp-for="AuthorId" class="form-control"
                asp-items="@(new SelectList(ViewBag.AuthorList, "Id", "Name"))">
            <option value="">-- Seleccione un autor --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

